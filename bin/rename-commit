#!/usr/bin/env bash
# WARNING: This script renames a FILE in git, not a commit message.
# Purpose: Rename a file and stage the git rename operation
# Usage: rename-commit <old-filename> <new-filename>

old_name="${1:?'first arg must be old file name'}"
new_name="${2:?'second arg must be new file name'}"

if [ ! -f "$old_name" ]; then
  echo "'$old_name' cannot be found"
  exit
fi

if [ -f "$new_name" ]; then
  echo "'$new_name' already exists"
  exit
fi

git mv "$old_name" "$new_name"

git commit \
  "$old_name" "$new_name" \
  -m "Rename \`$old_name\` to \`$new_name\`"


