#!/usr/bin/env bash
# Purpose: Manage dotfiles — install, update, and sync symlinks
# Usage: dotfiles [install|update|help]

BIN_NAME=$(basename "$0")
COMMAND_NAME=$1

ARROW="￫"
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
NC='\033[0m'

# Get dotfiles dir (so run this script from anywhere)
export DOTFILES_DIR EXTRA_DIR
DOTFILES_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && cd .. && pwd )"

sub_help () {
    echo -e "$ARROW Usage: ${YELLOW}$BIN_NAME <command>${NC}"
    echo
    echo "Commands:"
    echo "   help             This help message"
    echo "   install          Full end-to-end install (brew, mise, symlinks, macOS defaults)"
    echo "   update           Update packages and tool versions (OS, brew, mise)"
    echo "   clean            Clean up caches (brew)"
    echo "   symlinks         Run symlinks script"
    echo "   brew             Run brew script"
    echo "   hosts            Run hosts script"
    echo "   defaults         Run MacOS defaults script"
    echo "   osxextended      Run MacOS extended config script"
    echo "   dock             Run MacOS dock script"
}

sub_install () {
    . "$DOTFILES_DIR/install/install.sh"
    echo -e "${GREEN}$ARROW Success! Install command finished.${NC}"
}

sub_update () {
    sudo softwareupdate -i -a
    mise upgrade
    brew update
    brew upgrade
    echo -e "${GREEN}$ARROW Success! Update command finished.${NC}"
}

sub_clean () {
    brew cleanup
    echo -e "${GREEN}$ARROW Success! Clean command finished.${NC}"
}

sub_symlinks () {
    . "$DOTFILES_DIR/install/symlinks.sh"
    echo -e "${GREEN}$ARROW Success! Symlinks command finished.${NC}"
}

sub_brew () {
    . "$DOTFILES_DIR/install/brew.sh"
    echo -e "${GREEN}$ARROW Success! Brew command finished.${NC}"
}

sub_hosts () {
    . "$DOTFILES_DIR/install/hosts.sh"
    echo -e "${GREEN}$ARROW Success! Hosts command finished.${NC}"
}

sub_defaults () {
    . "$DOTFILES_DIR/macos/defaults.sh"
    echo -e "${GREEN}$ARROW Success! MacOS defaults command finished.${NC}"
}

sub_osxextended () {
    . "$DOTFILES_DIR/macos/extended.sh"
    echo -e "${GREEN}$ARROW Success! MacOS osxextended command finished.${NC}"
}

sub_dock () {
    . "$DOTFILES_DIR/macos/dock.sh"
    echo -e "${GREEN}$ARROW Success! MacOS dock command finished.${NC}"
}

case $COMMAND_NAME in
    "" | "-h" | "--help")
        sub_help
        ;;
    *)
        shift
        "sub_${COMMAND_NAME}" "$@"
        if [ $? = 127 ]; then
            echo -e "${RED}$ARROW Error: '$COMMAND_NAME' is not a known command or has errors.${NC}" >&2
            sub_help
            exit 1
        fi
        ;;
esac
